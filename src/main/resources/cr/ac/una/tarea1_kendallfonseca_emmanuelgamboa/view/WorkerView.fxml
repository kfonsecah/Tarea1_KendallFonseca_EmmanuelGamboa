<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="BorderPane" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.tarea1_kendallfonseca_emmanuelgamboa.controller.WorkerController">
   <left>
      <VBox prefHeight="720.0" prefWidth="318.0" style="-fx-background-color: CDCDCD;" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="imageLogo" fitHeight="96.0" fitWidth="102.0" pickOnBounds="true" preserveRatio="true">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </ImageView>
                  <Label fx:id="txtCooperativeName" prefHeight="115.0" prefWidth="155.0" text="Label">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                     <font>
                        <Font name="Book Antiqua" size="19.0" />
                     </font></Label>
               </children>
            </HBox>
            <MFXButton fx:id="btnAssociateMaintenance" onAction="#onActionBtnAssociateMaintenance" styleClass="btnWorkers" stylesheets="@Styles.css" text="Mantenimiento de Asociados">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" top="20.0" />
               </VBox.margin>
            </MFXButton>
            <MFXButton fx:id="btnPrintID" onAction="#onActionBtnPrintID" styleClass="btnWorkers" stylesheets="@Styles.css" text="Impresion del Carnet">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" />
               </VBox.margin>
            </MFXButton>
            <MFXButton fx:id="btnOpenAccounts" onAction="#onActionBtnOpenAccounts" styleClass="btnWorkers" stylesheets="@Styles.css" text="Apertura de Cuentas">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" />
               </VBox.margin>
            </MFXButton>
            <MFXButton fx:id="btnWithdrawDeposits" styleClass="btnWorkers" stylesheets="@Styles.css" text="Retiros y Depositos">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" />
               </VBox.margin>
            </MFXButton>
         </children>
      </VBox>
   </left>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
