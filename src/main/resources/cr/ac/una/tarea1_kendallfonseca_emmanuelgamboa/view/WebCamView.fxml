<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane id="AnchorPane" fx:id="root" prefHeight="500.0" prefWidth="1000.0" styleClass="viewCamView"
            stylesheets="@Styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cr.ac.una.tarea1_kendallfonseca_emmanuelgamboa.controller.WebCamController">
    <children>
        <BorderPane layoutX="10.0" layoutY="10.0" prefHeight="710.0" prefWidth="1219.0" AnchorPane.bottomAnchor="5.0"
                    AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="-144.0" AnchorPane.topAnchor="5.0">
            <bottom>
                <HBox alignment="CENTER" prefHeight="94.0" prefWidth="711.0" BorderPane.alignment="CENTER">
                    <children>
                        <MFXButton fx:id="btnTakePhoto" onAction="#onActionBtnTakePhoto" prefHeight="62.0"
                                   prefWidth="151.0" stylesheets="@Styles.css" text="Tomar Foto">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                            <graphic>
                                <ImageView fitHeight="32.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true"/>
                            </graphic>
                            <styleClass>
                                <String fx:value="btnCamView"/>
                                <String fx:value="btnTakePhoto"/>
                            </styleClass>
                        </MFXButton>
                        <MFXButton fx:id="btnRetakePhoto" onAction="#onActionBtnRetakePhoto" prefHeight="62.0"
                                   prefWidth="170.0" stylesheets="@Styles.css" text="Volver a tomar">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                            <graphic>
                                <ImageView fitHeight="32.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true"/>
                            </graphic>
                            <styleClass>
                                <String fx:value="btnCamView"/>
                                <String fx:value="btnTakeAgain"/>
                            </styleClass>
                        </MFXButton>
                        <MFXButton fx:id="btnSavePhoto" onAction="#onActionBtnSavePhoto" prefHeight="62.0"
                                   prefWidth="130.0" stylesheets="@Styles.css" text="Guardar">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                            <graphic>
                                <ImageView fitHeight="32.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true"/>
                            </graphic>
                            <styleClass>
                                <String fx:value="btnCamView"/>
                                <String fx:value="btnSave"/>
                            </styleClass>
                        </MFXButton>
                        <MFXButton fx:id="btnTurnOffCam" onAction="#onActionBtnStopCam" prefHeight="62.0"
                                   prefWidth="122.0" stylesheets="@Styles.css" text="Apagar">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                            <graphic>
                                <ImageView fitHeight="32.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true"/>
                            </graphic>
                            <styleClass>
                                <String fx:value="btnCamView"/>
                                <String fx:value="btnOff"/>
                            </styleClass>
                        </MFXButton>
                    </children>
                </HBox>
            </bottom>
            <center>
                <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <ImageView fx:id="imageView" fitHeight="179.0" fitWidth="268.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <HBox.margin>
                                <Insets bottom="130.0" left="155.0" right="120.0" top="215.0"/>
                            </HBox.margin>
                        </ImageView>
                        <ImageView fx:id="imagePrev" fitHeight="182.0" fitWidth="268.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <HBox.margin>
                                <Insets left="20.0" top="215.0"/>
                            </HBox.margin>
                        </ImageView>
                    </children>
                </HBox>
            </center>
        </BorderPane>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</AnchorPane>
